---
import DailyLayout from '@layouts/DailyLayout.astro';
export async function getStaticPaths() {
  const posts = await Astro.glob('../../../markdown/daily/*.md')

  return posts.map(post => ({
    params: { 
      date: post.frontmatter.date
    },
    props: {
      post
    },
  }))
}

const { Content } = Astro.props.post
const {imageName} = Astro.props.post.frontmatter
---

<DailyLayout imgName={imageName}><Content/></DailyLayout>
