---

//Component imports
import NavBar from '../components/NavBar'
const { title, imgName } = Astro.props;

const imgPath = `/src/assets/images/daily/${imgName}`

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-200 h-screen">
		<NavBar client:load/>
		<img src={imgPath} alt="#" class="h-2/3 w-auto">
		<slot />
	</body>
</html>